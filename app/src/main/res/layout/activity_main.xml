<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.boardgame.MainActivity"
    android:orientation="vertical"
    android:weightSum="3">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1Player"
            android:id="@+id/player_1"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="5"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MaxHP : "
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/player_2_MHP"
            android:layout_row="0"
            android:layout_column="14"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H       P : "
            android:id="@+id/textView3"
            android:layout_row="1"
            android:layout_column="1"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/player_1_HP"
            android:layout_row="1"
            android:layout_column="2"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H       P : "
            android:id="@+id/textView13"
            android:layout_row="1"
            android:layout_column="13"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/player_2_HP"
            android:layout_row="1"
            android:layout_column="14"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D I C E : "
            android:id="@+id/textView4"
            android:layout_row="2"
            android:layout_column="1"
            android:textSize="13dp"
            android:textIsSelectable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/player_1_dice"
            android:layout_row="2"
            android:layout_column="2"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D I C E : "
            android:id="@+id/textView15"
            android:layout_row="2"
            android:layout_column="13"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/player_2_dice"
            android:layout_row="2"
            android:layout_column="14"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONEY : "
            android:id="@+id/textView5"
            android:layout_row="3"
            android:layout_column="1"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/player_1_money"
            android:layout_row="3"
            android:layout_column="2"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MONEY : "
            android:id="@+id/textView17"
            android:layout_row="3"
            android:layout_column="13"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:id="@+id/player_1_MHP"
            android:layout_row="0"
            android:layout_column="2"
            android:textSize="13dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_row="0"
            android:layout_column="10"
            android:layout_rowSpan="4"
            android:gravity="center|right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="1Player"
                android:id="@+id/turn"
                android:textSize="50dp"
                android:layout_gravity="right" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2Player"
            android:id="@+id/player_2"
            android:layout_row="0"
            android:layout_column="12"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_rowSpan="5"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MaxHP : "
            android:id="@+id/textView12"
            android:layout_row="0"
            android:layout_column="13"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/player_2_money"
            android:layout_row="3"
            android:layout_column="14"
            android:textSize="13dp" />

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/player1"
            android:layout_row="0"
            android:layout_column="0"
            android:src="@drawable/p1" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_row="1"
            android:layout_column="0"
            android:src="@drawable/map1" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/player2"
            android:layout_row="2"
            android:layout_column="0"
            android:src="@drawable/p2" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_margin="10dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주사위 굴리기"
            android:id="@+id/btnRoll"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="25dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/dice"
            android:src="@drawable/dice3"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주사위 구매"
            android:id="@+id/btn_dice"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="25dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이템 구매"
            android:id="@+id/btn_item"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="25dp" />
    </LinearLayout>

</LinearLayout>
